  {
    "name": "Join:Simple",
    "query": "select c.*,cn.*  from customers c inner join `customer-notes` cn on c.id=cn.id",
    "type": "aggregate",
    "output": {
      "pipeline": [
        {
          "$project": {
            "c": "$$ROOT"
          }
        },
        {
          "$lookup": {
            "from": "customer-notes",
            "as": "cn",
            "localField": "c.id",
            "foreignField": "id"
          }
        },
        {
          "$match": {
            "$expr": {
              "$gt": [
                {
                  "$size": "$cn"
                },
                0
              ]
            }
          }
        },
        {
          "$project": {
            "c": "$c",
            "cn": "$cn"
          }
        }
      ],
      "collections": [
        "customers",
        "customer-notes"
      ]
    }
  },
  {
    "name": "Join: With $$ROOT",
    "query": "select MERGE_OBJECTS(c,FIRST_IN_ARRAY(cn)) as `$$ROOT` from customers c inner join `customer-notes` cn on c.id=cn.id",
    "type": "aggregate",
    "output": {
      "pipeline": [
        {
          "$project": {
            "c": "$$ROOT"
          }
        },
        {
          "$lookup": {
            "from": "customer-notes",
            "as": "cn",
            "localField": "c.id",
            "foreignField": "id"
          }
        },
        {
          "$match": {
            "$expr": {
              "$gt": [
                {
                  "$size": "$cn"
                },
                0
              ]
            }
          }
        },
        {
          "$replaceRoot": {
            "newRoot": {
              "$mergeObjects": [
                "$c",
                {
                  "$first": "$cn"
                }
              ]
            }
          }
        }
      ],
      "collections": [
        "customers",
        "customer-notes"
      ]
    }
  },
  {
    "name": "Join: outer",
    "query": "select c.*,`customer-notes`.*,cn2.*  from customers c inner join `customer-notes` on `customer-notes`.id=c.id left outer join `customer-notes2` cn2 on cn2.id=`customer-notes`.id",
    "type": "aggregate",
    "output": {
      "pipeline": [
        {
          "$project": {
            "c": "$$ROOT"
          }
        },
        {
