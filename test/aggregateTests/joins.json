            "foreignField": "id"
          }
        },
        {
          "$match": {
            "$expr": {
              "$gt": [
                {
                  "$size": "$customer-notes"
                },
                0
              ]
            }
          }
        },
        {
          "$lookup": {
            "from": "customer-notes2",
            "as": "cn2",
            "localField": "customer-notes.id",
            "foreignField": "id"
          }
        },
        {
